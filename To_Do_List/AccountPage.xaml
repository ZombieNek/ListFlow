<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="To_Do_List.AccountPage"
             BackgroundColor="#212121">

    <!--основная верстка-->
    <Grid RowDefinitions="auto, *, auto">

        <!--шапка-->
        <Grid Grid.Row="0"
              ColumnDefinitions="*"
              BackgroundColor="#4CAF50"
              RowDefinitions="*"
              HeightRequest="65">


            <!--текст на шапке-->
            <Label Text="Тут будет имя аккаунта"
                   Grid.Row="1"
                   Grid.Column="2"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="30"
                   FontFamily="MyFontRegular"
                   FontAutoScalingEnabled="True"/>


        </Grid>


        <Label Text="Тут будет информация из аккаунта"
               FontSize="40"
               Grid.Row="1"
               TextColor="White"/>

        <!--подвал-->
        <Grid Grid.Row="2"
              ColumnDefinitions="auto, auto"
              BackgroundColor="#4CAF50"
              RowDefinitions="*"
              HeightRequest="65">

        </Grid>

    </Grid>

</ContentPage>